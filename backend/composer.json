{
    "name": "walmart-uganda/ecommerce",
    "description": "E-commerce platform for Walmart Uganda",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=8.0.0",
        "stripe/stripe-php": "^10.0",
        "symfony/var-dumper": "^5.4",
        "monolog/monolog": "^2.0",
        "vlucas/phpdotenv": "^5.4",
        "swiftmailer/swiftmailer": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs",
        "analyze": "phpstan analyse"
    }
}
